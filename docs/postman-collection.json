{
  "info": {
    "name": "Menuop API",
    "description": "API collection for testing Menuop endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Menus",
      "item": [
        {
          "name": "Get All Menus",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menus",
              "host": ["{{baseUrl}}"],
              "path": ["menus"]
            }
          },
          "response": []
        },
        {
          "name": "Create Menu",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Menu\",\n  \"restaurant_name\": \"Test Restaurant\",\n  \"description\": \"A test menu\",\n  \"sections\": [\n    {\n      \"name\": \"Appetizers\",\n      \"description\": \"Starter dishes\",\n      \"items\": [\n        {\n          \"name\": \"Caesar Salad\",\n          \"description\": \"Fresh romaine with parmesan\",\n          \"price\": 12.99,\n          \"is_available\": true\n        }\n      ]\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/menus",
              "host": ["{{baseUrl}}"],
              "path": ["menus"]
            }
          },
          "response": []
        },
        {
          "name": "Get Menu by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Menu",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Menu\",\n  \"restaurant_name\": \"Updated Restaurant\",\n  \"description\": \"An updated menu\",\n  \"sections\": [\n    {\n      \"name\": \"Main Courses\",\n      \"description\": \"Hearty meals\",\n      \"items\": [\n        {\n          \"name\": \"Grilled Chicken\",\n          \"description\": \"Seasoned and grilled to perfection\",\n          \"price\": 18.99,\n          \"is_available\": true\n        }\n      ]\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Publish Menu",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_published\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}/publish",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}", "publish"]
            }
          },
          "response": []
        },
        {
          "name": "Unpublish Menu",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_published\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}/publish",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}", "publish"]
            }
          },
          "response": []
        },
        {
          "name": "Soft Delete Menu",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Permanently Delete Menu",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}?permanent=true",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}"],
              "query": [
                {
                  "key": "permanent",
                  "value": "true"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Deleted Menus",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menus/deleted",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "deleted"]
            }
          },
          "response": []
        },
        {
          "name": "Restore Menu (Forbidden)",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/menus/{{menuId}}/restore",
              "host": ["{{baseUrl}}"],
              "path": ["menus", "{{menuId}}", "restore"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Public",
      "item": [
        {
          "name": "Get Public Menu",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/public/menus/{{menuId}}",
              "host": ["{{baseUrl}}"],
              "path": ["public", "menus", "{{menuId}}"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
